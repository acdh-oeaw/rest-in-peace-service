---
import PageLayout from "../layouts/page-layout.astro"
import { getCollection } from "astro:content"
const data = await getCollection("tombstones")
---
<PageLayout>
	<div class="px-5 py-3 sm:px-16 sm:py-10">
		<!-- <h1 class="self-center text-xl md:text-2xl py-4">Gallery</h1> -->
		
		<ul class="m-auto grid grid-cols-[repeat(auto-fill,minmax(270px,1fr))] gap-8 ">
			{data.map((entry) => {
				return <li>
						<a href={"/rest-in-peace-service/tombstones/" + entry.id}>
							<article class="border-brandGray border-2 rounded-md shadow-sm bg-brandLight">
								<img src=`/rest-in-peace-service/${entry.data?.img}` alt="Image of the deprecated website" class="h-40 w-full object-cover">
								<h2 class="hover:bg-brandGray underline underline-offset-4 decoration-brandGrayDark p-2">
									{entry.data.title_short}
								</h2>
							</article>
						</a>
					</li>
			})}
		</ul>
	</div>
</PageLayout>