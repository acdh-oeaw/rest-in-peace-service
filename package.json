{
	"name": "@acdh-oeaw/rest-in-peace-service",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.12.2",
	"scripts": {
		"build": "run-s build:site generate:search-index",
		"build:site": "astro build",
		"dev": "astro dev",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"generate:search-index": "pagefind --site ./dist/client/",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(astro|css)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "astro preview",
		"sync": "astro sync",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "astro check",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@fontsource-variable/inter": "^5.1.0",
		"astro": "^4.16.7"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.3",
		"@acdh-oeaw/eslint-config-astro": "^2.0.4",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.4",
		"@acdh-oeaw/eslint-config-react": "^2.0.4",
		"@acdh-oeaw/eslint-config-solid": "^2.0.5",
		"@acdh-oeaw/eslint-config-tailwindcss": "^2.0.3",
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@acdh-oeaw/stylelint-config": "^2.0.4",
		"@acdh-oeaw/tsconfig": "^1.2.0",
		"@astrojs/check": "^0.8.3",
		"@astrojs/tailwind": "^5.1.2",
		"@playwright/test": "^1.48.1",
		"@tailwindcss/typography": "^0.5.15",
		"@types/node": "^22.7.8",
		"ci-info": "^4.0.0",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"eslint": "^9.13.0",
		"eslint-config-flat-gitignore": "^0.3.0",
		"globals": "^15.11.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.10",
		"npm-run-all2": "^7.0.0",
		"prettier": "^3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"simple-git-hooks": "^2.11.1",
		"stylelint": "^16.10.0",
		"tailwindcss": "^3.4.14",
		"typescript": "^5.6.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.astro": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(astro|css|js|ts|tsx),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
